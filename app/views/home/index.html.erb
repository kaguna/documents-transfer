<% if current_user %>
<div class="container">
  <div class="row form-group">
    <div class="col-sm-3">
      <h3>File Transfer</h3>
    </div>
    <div class="col-sm-5">
      <h3>Files for:  <%= current_user.email %></h3>
    </div>
    <div class="col-sm-3">
      <%= link_to 'Logout', logout_path, class: 'btn btn-default btn-lg btn-block' %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-3">
      <%= link_to 'Create new file', new_document_path, class: 'btn btn-default btn-lg' %>
    </div>
    <div class="col-sm-4">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'all_documents', documents: @documents %>
    </div>
  </div>
</div>
<% end %>
